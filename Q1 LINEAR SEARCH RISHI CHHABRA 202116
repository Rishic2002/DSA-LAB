//LINEAR SEARCH IN 2D ARRAY 2X2 MATRIX RISHI CHHABRA 202116
#include <iostream>
using namespace std;;
int main()
{
	int i,j,x,loci=0,locj=0;    // loci position of i locj position of j
	int a[3][3];
	printf("\nEneter The Value Of Array:");
	for(i=1;i<=2;i++)
		{
			for(j=1;j<=2;j++)
				{
					cin>>a[i][j];
				}
		}

	printf("\nEnter The Value To Be Serched:");
    cin>>x;
	for(i=1;i<=2;i++)
		{
			for(j=1;j<=2;j++)
				{
					if(x==a[i][j])
						{
							loci=i;
							locj=j;
							break;
						}
				}
		}
	printf("\nThe Element is at %d Row And %d Coloumn.",loci,locj);
	printf("\nSearch Completed.");
	return 0;
}
